{
	// Path to WordPress project in lockal
	// "intelephense.environment.documentRoot": "D:\\OpenServer\\domains\\gulp-wp.loc\\",
	// "intelephense.environment.includePaths": ["D:\\OpenServer\\domains\\gulp-wp.loc\\"],
	"path-autocomplete.pathMappings": {
		"@root": "${folder}", // alias for root
		"@src": "${folder}/src", // alias for src
		"@assets": "${folder}/src/assets", // alias for assets
		"@fonts": "${folder}/src/assets/fonts", // alias for fonts
		"@img": "${folder}/src/assets/img", // alias for images
		"@sprite": "${folder}/src/assets/sprite", // alias for sprite
		"@svg": "${folder}/src/assets/svg", // alias for svg
		"@scss": "${folder}/src/scss", // alias for scss
		"@js": "${folder}/src/js" // alias for js
	}
}
